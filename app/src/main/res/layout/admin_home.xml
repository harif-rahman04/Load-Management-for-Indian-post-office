<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context="com.example.hrf_rahmana.hk1.Admin_Home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="0dp"
                            android:src="@drawable/indiapostlogo" />
                        <ImageView
                            android:layout_marginTop="18dp"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:src="@drawable/em"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="0dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginLeft="17dp"
                    android:orientation="vertical"
                    android:background="#FFFFEC20"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="#FFF92825"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:weightSum="4">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_above="@id/linlaycen"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="80dp"
                            android:layout_height="73dp"
                            android:src="@drawable/location" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track Me"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="15dp"/>
                    </LinearLayout>
                    <android.support.v4.widget.Space
                        android:layout_width="50dp"
                        android:layout_height="100dp" />
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <ImageView
                            android:layout_marginTop="8dp"
                            android:layout_weight="3"
                            android:id="@+id/img2"
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:src="@drawable/neigh" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adjacent Centre"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/linlaycen"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:src="@drawable/v1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TrackVehicle"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="15dp"/>
                    </LinearLayout>
                    <android.support.v4.widget.Space
                        android:layout_width="51dp"
                        android:layout_height="100dp" />
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:weightSum="4">
                        <ImageView
                            android:layout_weight="3"
                            android:id="@+id/img4"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:src="@drawable/viewallvehicles" />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All vehicles"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="15dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:weightSum="4"
                        android:layout_weight="1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img5"
                            android:layout_weight="3"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_gravity="right"
                            android:src="@drawable/vehmonitor" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:text="Load monitoring"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <android.support.v4.widget.Space
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="100dp" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:weightSum="4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_weight="3"
                            android:id="@+id/img6"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="30dp"
                            android:src="@drawable/nearbyvehicles" />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Find nearby vehicles"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="15dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
