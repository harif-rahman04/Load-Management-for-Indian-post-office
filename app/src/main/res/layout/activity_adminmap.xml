<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hrf_rahmana.hk1.Adminmap">
    <fragment
        android:id="@+id/place_autocomplete_fragment2"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <fragment
        android:id="@+id/map2"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="21dp" />

    <Button
        android:id="@+id/binc"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bdec"
        android:layout_alignLeft="@+id/txtrad"
        android:layout_alignStart="@+id/txtrad"
        android:layout_marginBottom="33dp"
        android:background="@mipmap/inc"
        android:elevation="0dp" />

    <Button
        android:id="@+id/bdec"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/dec" />

    <TextView
        android:id="@+id/txtrad"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/bdec"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:text="KM"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/localityspinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/txtrad"
        android:layout_toStartOf="@+id/txtrad" />

</RelativeLayout>
