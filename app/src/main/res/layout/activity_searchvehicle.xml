<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/img"
        tools:context="com.example.hrf_rahmana.hk1.searchvehicle"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp">
                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="0dp"
                                android:src="@drawable/indiapostlogo" />
                            <ImageView
                                android:layout_marginTop="18dp"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:src="@drawable/em"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="0dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginLeft="17dp"
                        android:orientation="vertical"
                        android:background="#FFFFEC20"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginLeft="17dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="#FFF92825"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="11dp"
                app:cardCornerRadius="20dp"
                android:layout_marginBottom="11dp"
                app:cardElevation="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/vechid"
                        android:text="Enter Vechicle ID"
                        android:gravity="center"
                        android:textSize="23dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/textView" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/vechid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <EditText
                            android:id="@+id/hackvehid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12.5dp"
                            android:layout_marginLeft="12.5dp"
                            android:hint="Vehicle ID"
                            android:textColor="#000" />
                    </android.support.design.widget.TextInputLayout>
                    <Button
                        android:id="@+id/hacksubbuttoon"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SUBMIT"
                        android:layout_below="@+id/vechid"
                        android:layout_marginHorizontal="30dp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
